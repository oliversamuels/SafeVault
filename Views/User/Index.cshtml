@{
    ViewData["Title"] = "User Page";
}

<div class="text-center">
    <h1 class="display-4">User Page</h1>
</div>

@if(Model != null && Model?.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-center">
        <p>No users found.</p>
    </div>
}

<a asp-action="Create">Create New User</a>